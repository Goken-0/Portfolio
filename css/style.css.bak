/*IMPORTATION DE LA POLICE POPPINS*/
@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet');
/*AJUSTEMENTS*/
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    text-decoration: none;
    border: none;
    outline: none;
    font-family: 'Poppins', sans-serif;
}
/*MODIFICATION DE LA TAILLE DE POLICE*/
html{
    font-size: 62.5%;
}
/*MODIFICATION DU CORPS DE LA PAGE*/
body{
    width: 100%;
    height: 100vh;
    overflow-x: hidden;
    background-color: black;
    color: white;
}
/*MODIFICATION ENTETE (BARRE DE NAVIGATION)*/
header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1rem 9%;
    background-color: black;
    filter: drop-shadow(10px);
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
}

main{
    padding-top: 120px;
}
/*MODIFICATION DE LA BARRE DE NAVIGATION*/
nav a{
    font-size: 1.8rem;
    color: white;
    margin-left: 4rem;
    font-weight: 500;
    transition: 0.3s ease;
    border-bottom: 3px solid transparent;
}

nav a:hover,
nav a.active{
    color: rgb(119, 158, 148);
    border-bottom: 3px solid rgb(119, 158, 148);
}
/*MODIFICATION DE LA BARRE DE NAVIGATION POUR LES APPAREILS MOBILES ET TABLETTES*/
@media(max-width:995px){
    nav{
        position: absolute;
        top: 0;
        right: 0;
        width: 40%;
        border-left: 3px solid rgb(119, 158, 148);
        border-bottom: 3px solid rgb(119, 158, 148);
        border-bottom-left-radius: 2rem;
        padding: 1rem solid;
        background-color: black;
        border-top: 0.1rem solid rgba(0,0,0,0,1);
    }

    nav.active{
        display: block;
    }

    nav a{
        display: block;
        font-size: 2rem;
        margin: 3rem 0;   
    }

    nav a:hover,
    nav a.active{
        padding: 1rem;
        border-radius: 0.5rem;
        border-bottom: 0.5rem solid rgb(119, 158, 148);
    }
}
/*TAILLE MINIMUM POUR LES APPAREILS MOBILES ET TABLETTES*/
section{
    min-height: 100vh;
    padding: 5rem 9% 5rem;
}
/*MODIFICATION IMAGE ELIOTT ALDERSON*/
.home{
    display: flex;
    justify-content: center;
    align-items: center;
    gap : 8rem;
    background-color: black;
}
/*MODIFICATION PHRASE DE PRESENTATION*/
.home .home-content h1{
    font-size: 6rem;
    font-weight: 700;
    line-height: 1.3;
}

span{
    color: rgb(119, 158, 148)
}
/*MODIFICATION PHRASE DE PRESENTATION*/
.home-content h3{
    font-size: 4rem;
    margin-bottom: 1rem;
    font-weight: 700;
}
/*MODIFICATION IMAGE ELIOTT ALDERSON (POUR LE RENDU EN CERCLE*/
.home-img{
    border-radius: 50%;
}

.home-img img{
    position: relative;
    width: 20vw;
    border-radius: 50%;
    box-shadow: 0 0 25px solid rgb(119, 158, 148);
    cursor: pointer;
    transition: 0.2s linear;
}

.home-img img:hover{
    font-size: 1.8rem;
    font-weight: 500;
}
/*MODIFICATION LOGO RESEAUX SOCIAUX*/
.social-icons a{
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 4rem;
    height: 4rem;
    background-color: transparent;
    border: 0.2rem solid rgb(119, 158, 148);
    font-size: 2rem;
    border-radius: 50%;
    margin: 3rem 1.5rem 3rem 0;
    transition: 0.3s ease;
    color: rgb(119, 158, 148);
}

.social-icons a:hover{
    color: white;
    transform: scale(1.3) translateY(-5px);
    background-color: rgb(119, 158, 148);
    box-shadow: 0 0 25px rgb(119, 158, 148);
}
/*MODIFICATION BOUTONS RESEAUX SOCIAUX*/
.btn{
    display: inline-block;
    padding: 1rem 2.8rem;
    background-color: black;
    border-radius: 4rem;
    font-size: 1.6rem;
    color: rgb(119, 158, 148);
    letter-spacing: 0.3;
    font-weight: 600;
    border: 2px solid rgb(119, 158, 148);
    transition: 0.3s ease;
    cursor: pointer;
}

.btn:hover{
    transform: scale3d(1.03);
    background-color: rgb(119, 158, 148);
    color: black;
    box-shadow: 0 0 25px rgb(119, 158, 148);
}
/*MODIFICATION PHRASE DE PRESENTATION*/
.typing-text{
    font-size: 34px;
    font-weight: 600;
    min-width: 280px;
}

.typing-text span{
    position: relative;
}

.typing-text span::before{
    content: "Ã©tudiant en BTS SIO";
    color: rgb(119, 158, 148);
    animation: words 20s infinite;
}

.typing-text span::after{
    content: "";
    background-color: black;
    position: absolute;
    width: calc(100% + 8px);
    height: 100%;
    border-left: 3px solid black;
    right: -8;
    animation: cursor 0.6s infinite;
}
/*MODIFICATION DE LA PHRASE D'ACCROCHE*/
.sentence{
    font-size: 2rem;
}
/*ANIMATION BARRE DE TEXTE*/
@keyframes cursor{
    to{
        border-left: 3px solid rgb(119, 158, 148);
    }
}
/*MODIFICATION POUR LES APPAREILS MOBILES ET TABLETTES*/
@media (max-width: 1000px){
    .home{
        gap: 4rem;
    }
}

@media(max-width:995px){
    .home{
        flex-direction: column;
        margin: 5rem 4rem;
    }

    .home .home-content h3{
        font-size: 2.5rem;
    }

    .home-content h1{
        font-size: 5rem;
    }

    .home-img img{
        width: 70vw;
        margin-top: 4rem;
    }
}
/*MODIFICATION DE L'IMAGE DU CV*/
.cv-container{
    display: flex;
    justify-content: center;
    align-items: flex-start;
    min-height: 100vh;
}

.cv-img{
    width: 30vw;
    max-width: 600px;
    min-width: 300px;
    border: 5px solid rgb(119, 158, 148);
}
/*MODIFICATION DU BOUTON TELECHARGER CV*/
.btn-cv{
    display: inline-block;
    padding: 1rem 2.8rem;
    background-color: black;
    border-radius: 4rem;
    font-size: 1.6rem;
    color: rgb(119, 158, 148);
    letter-spacing: 0.3;
    font-weight: 600;
    border: 2px solid rgb(119, 158, 148);
    transition: 0.3s ease;
    cursor: pointer;
    justify-content: center;
    align-items: flex-start;
}

.btn-cv:hover{
    transform: scale3d(1.03);
    background-color: rgb(119, 158, 148);
    color: black;
    box-shadow: 0 0 25px rgb(119, 158, 148);
}

.cv-content{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
}